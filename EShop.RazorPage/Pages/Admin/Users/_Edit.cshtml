@model EShop.RazorPage.Models.Users.Commands.EditUserCommand
<form method="post" data-ajax="true"
      asp-page="Index" asp-page-handler="EditUser" enctype="multipart/form-data">
    <div class="row">
        @Html.HiddenFor(f=>f.UserId)

        <div class="col-md-6">
            @Html.EditorFor(f=>f.Name)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(f=>f.Family)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(f=>f.PhoneNumber)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(f=>f.Email)
        </div>
        <div class="col-lg-6 mb-3">
            @Html.EditorFor(f=>f.Gender)
        </div>
        <div class="col-lg-6 mb-3">
            @Html.EditorFor(f=>f.Avatar)
        </div>
    </div>
    <button type="submit" class="btn btn-success">
        ویرایش کاربر
    </button>
</form>
